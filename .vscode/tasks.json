{
    "version": "2.0.0",
    "command": "cmd",
    "args": [
        "/C",
        "bundle",
        "exec",
        "jekyll"
    ],
    "tasks": 
    [
        {
            "label": "Serve",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/C",
                "bundle",
                "exec",
                "jekyll",
                "serve",
                "--config",
                "_config.dev.yml"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/C",
                "bundle",
                "exec",
                "jekyll",
                "build"
            ],
            "problemMatcher": [],
            "group": {
                "_id": "build",
                "isDefault": false
            }
        }
    ]
}